{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true,
    "allowImportingTsExtensions": true,

    "composite": true,
    "strict": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,

    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"]
}
