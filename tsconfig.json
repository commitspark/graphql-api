{
   "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "composite": true,
    "strict": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,

    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}
